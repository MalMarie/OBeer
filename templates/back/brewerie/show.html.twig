{% extends 'back/base_back.html.twig' %}


{% block title %} Voir une brasserie {% endblock %}

{% block body %}


    <h1> {{brewerie.name}} </h1>

   <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brewerie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ brewerie.name }}</td>
            </tr>
            
            <tr>
                <th>Adresse</th>
                <td>{{ brewerie.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ brewerie.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ brewerie.city }}</td>
            </tr>
            <tr>
                <th>Région</th>
                <td>{{ brewerie.state }}</td>
            </tr>
            <tr>
                <th> Site internet</th>
                <td><a href="{{ brewerie.website }}">{{ brewerie.website }}</td>
            </tr>
        </tbody>
    </table>

{# on ajoute un conteneur flexbox pour aligner les boutons #}
    <div class="d-flex justify-content-start">

        {# bouton retour #}
        <a href="{{ path('app_back_brewerie_index') }}">
            <button class="btn btn-info m-2">Retour à la liste</button>
        </a>
    
        {# bouton modifier #}
        <a href="{{ path('app_back_brewerie_edit', {'id': brewerie.id}) }}">
            <button class="btn btn-warning m-2">Modifier</button>
        </a>

        {# bouton supprimer #}
        {{ include('back/brewerie/_delete_form.html.twig') }}

    </div>
    {# fin du conteneur flexbox #}


{% endblock %}
